<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tasks List</title>
    <style>
        /* Background with Gradient */
        body {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #fdfbfb, #e3eaf4);
            text-align: center;
            padding: 30px;
            overflow-x: hidden;
        }

        /* Title Styling */
        h1 {
            font-size: 2.5rem;
            color: #ff4081;
            text-shadow: 2px 2px 10px rgba(255, 64, 129, 0.3);
            margin-bottom: 20px;
            animation: fadeIn 1.5s ease-in-out;
        }

        /* Create Task Button */
        .create-btn {
            display: inline-block;
            font-size: 1.2rem;
            padding: 12px 20px;
            color: white;
            background: linear-gradient(135deg, #ff4081, #ff79a9);
            border-radius: 50px;
            text-decoration: none;
            transition: all 0.3s ease-in-out;
            box-shadow: 0px 5px 15px rgba(255, 64, 129, 0.4);
            animation: pulse 2s infinite;
        }

        .create-btn:hover {
            background: linear-gradient(135deg, #e91e63, #ff5a8e);
            box-shadow: 0px 10px 25px rgba(233, 30, 99, 0.5);
            transform: scale(1.05);
        }

        /* Table Styling */
        table {
            width: 90%;
            max-width: 900px;
            margin: 30px auto;
            border-collapse: collapse;
            background: white;
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.1);
            border-radius: 12px;
            overflow: hidden;
        }

        th, td {
            padding: 14px;
            border-bottom: 1px solid #ddd;
        }

        th {
            background: #ff4081;
            color: white;
            font-size: 1.2rem;
        }

        tr:hover {
            background: #ffebf0;
        }

        /* Actions Styling */
        .actions a {
            color: #ff4081;
            font-weight: bold;
            text-decoration: none;
            margin: 0 5px;
            transition: all 0.3s ease-in-out;
        }

        .actions a:hover {
            color: #e91e63;
            text-decoration: none;
        }

        .title-link {
            color: black;
            font-weight: bold;
            text-decoration: none;
            transition: all 0.3s ease-in-out;
        }

        .title:hover {
            color: #e91e63;
            scale: 1.1;
            text-decoration: none;
        }

        /* Fade-in Animation */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Button Pulse Animation */
        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.02); }
            100% { transform: scale(1); }
        }
    </style>
</head>
<body>
    <h1>üìã Tasks List</h1>
    <a href="/tasks/create" class="create-btn">‚ûï Create Task</a>

    <table>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Completed</th>
            <th>Actions</th>
        </tr>
        <% tasks.forEach(task => { %>
        <tr>
            <!-- Capitalize First Letter of Title -->
            <td class="title">
                <a class="title-link" href="/tasks/view/<%= task.id %>">
                    <%= task.title.charAt(0).toUpperCase() + task.title.slice(1) %>
                </a>
            </td>

            <!-- Capitalize First Letter of Description & Truncate If Longer Than 20 Chars -->
            <td>
                <%= task.description.length > 20 
                    ? task.description.charAt(0).toUpperCase() + task.description.slice(1, 20) + "..." 
                    : task.description.charAt(0).toUpperCase() + task.description.slice(1) 
                %>
            </td>

            <td><%= task.completed ? "‚úÖ" : "‚ùå" %></td>
            <td class="actions">
                <a href="/tasks/edit/<%= task.id %>">‚úèÔ∏è Edit</a> | 
                <a href="/tasks/delete/<%= task.id %>" onclick="return confirm('Are you sure?');">üóëÔ∏è Delete</a>
            </td>
        </tr>
        <% }); %>
    </table>
</body>
</html>
